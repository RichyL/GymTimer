<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModels="clr-namespace:GUI.ViewModels"
             x:Class="GUI.Controls.RoundViewEditor"
             x:DataType="ViewModels:RoundEditViewModel" >
    
    <VerticalStackLayout>

        <HorizontalStackLayout BackgroundColor="Red">
            <Label Text="Exercise:"/>

            <Label Text="Hour"/>
            <Picker x:Name="ExerciseHourPicker" SelectedItem="{Binding ExerciseHour}"/>

            <Label Text="Minute"/>
            <Picker x:Name="ExerciseMinutePicker" SelectedItem="{Binding ExerciseMinute}"/>

            <Label Text="Second"/>
            <Picker x:Name="ExerciseSecondPicker" SelectedItem="{Binding ExerciseSecond}"/>

        </HorizontalStackLayout>

        <HorizontalStackLayout BackgroundColor="Green">
            <Label Text="Rest:"/>
            

            <Label Text="Hour"/>
            <Picker x:Name="RestHourPicker" SelectedItem="{Binding RestHour}"/>

            <Label Text="Minute"/>
            <Picker x:Name="RestMinutePicker" SelectedItem="{Binding RestMinute}"/>

            <Label Text="Second"/>
            <Picker x:Name="RestSecondPicker" SelectedItem="{Binding RestSecond}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
