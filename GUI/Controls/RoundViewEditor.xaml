<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModels="clr-namespace:GUI.ViewModels"
             x:Class="GUI.Controls.RoundViewEditor"
             x:DataType="ViewModels:RoundViewModel" >
    
    <VerticalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Exercise:" BackgroundColor="Red"/>
            <Editor x:Name="ExerciseTimeEntry" BackgroundColor="Tomato" Text="{Binding ExerciseTime}"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Rest:"  BackgroundColor="Green"/>
            <Editor x:Name="RestTimeEntry" BackgroundColor="GreenYellow" Text="{Binding RestTime}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
