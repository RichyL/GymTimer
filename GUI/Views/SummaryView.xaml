<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GUI.Views.SummaryView"
             xmlns:Controls="clr-namespace:GUI.Controls"
             xmlns:ViewModels="clr-namespace:GUI.ViewModels"
             Title="SummaryView"
             x:DataType="ViewModels:SummaryViewModel">
    <ScrollView>
        <VerticalStackLayout>
        <Label 
            Text="{Binding Name,FallbackValue='No Name set'}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <HorizontalStackLayout>
            <Label Text="Intro Time:" />
            <Label Text="{Binding Intro}" />
        </HorizontalStackLayout>

        
        <ListView ItemsSource="{Binding Rounds}"  >
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="Models:Round">
                    <ViewCell>
                        <Controls:RoundView BindingContext="." />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <HorizontalStackLayout>
            <Button Text="Edit" />
            <Button Text="Go!" />
        </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>